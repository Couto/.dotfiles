Protocol 2
IdentitiesOnly yes
# https://security-tracker.debian.org/tracker/CVE-2016-0777
UseRoaming no
# https://github.com/drduh/OS-X-Yosemite-Security-and-Privacy-Guide
HashKnownHosts yes

Host *
# Note: Ideally the following lines were the ones in use. However at the
# moment I'm not using machines with up-to-date openSSH
#
# https://stribika.github.io/2015/01/04/secure-secure-shell.html
Ciphers chacha20-poly1305@openssh.com,aes256-gcm@openssh.com,aes128-gcm@openssh.com,aes256-ctr,aes192-ctr,aes128-ctr
KexAlgorithms curve25519-sha256@libssh.org,diffie-hellman-group-exchange-sha256
MACs hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com,hmac-ripemd160-etm@openssh.com,umac-128-etm@openssh.com,hmac-sha2-512,hmac-sha2-256,hmac-ripemd160,umac-128@openssh.com

# Mozilla "Intermediate" recomentation
# https://wiki.mozilla.org/Security/Guidelines/OpenSSH#Intermediate_.28connects_to_older_servers.29
  HostKeyAlgorithms ssh-ed25519-cert-v01@openssh.com,ssh-rsa-cert-v01@openssh.com,ssh-ed25519,ssh-rsa,ecdsa-sha2-nistp256-cert-v01@openssh.com,ecdsa-sha2-nistp521-cert-v01@openssh.com,ecdsa-sha2-nistp384-cert-v01@openssh.com,ecdsa-sha2-nistp521,ecdsa-sha2-nistp384,ecdsa-sha2-nistp256

  ServerAliveCountMax 5
  ServerAliveInterval 120

# It doesn't support ed25519 nor ecdsa keys
Host bitbucket.org
  User git
  IdentityFile ~/.ssh/id_rsa
